</head>
<body>
    <div class="container">
        {{>navbar}}
        <h1>Weather Search</h1>
        <form id="weatherForm">
            <div class="form-group">
                <label for="city">Enter City:</label>
                <input type="text" id="cityName" name="city" placeholder="Enter city name" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" id="submitBtn">
            </div>
        </form>
        <div class="weather-result" id="weatherResult">
            <p id="day">Tuesday</p>
            <p id="todayDate">13 March</p>
            <p id="temp"><span>0</span><sup>o</sup>C</p>
            <p id="tempStatus">Cloud</p>
        </div>
    </div>

